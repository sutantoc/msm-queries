<h1> Actor #<%= Actor.where({:id => @actor_id }).at(0).id %> details </h1>

<a href="/actors"> Go back </a>

<hr>

<dl>
  <dt> Name </dt>
  <dd> <%= Actor.where( {:id => @actor_id }).at(0).name %> </dd>

  <dt> Dob </dt>
  <dd> <%= Actor.where( {:id => @actor_id }).at(0).dob %> </dd>

  <dt> Bio </dt>
  <dd> <%= Actor.where( {:id => @actor_id }).at(0).bio %> </dd>

  <dt> Image </dt>
  <dd> <img src ="<%= Actor.where( {:id => @actor_id }).at(0).image %>" style="width:250px;" > </dd>

  <dt> Created at </dt>
  <dd> <%= Actor.where( {:id => @actor_id }).at(0).created_at %> </dd>

  <dt> Updated at </dt>
  <dd> <%= Actor.where( {:id => @actor_id }).at(0).updated_at %> </dd>
</dl>

<hr>

<h2> Filmography </h2>

<table border ="1">
  <tr>
    <th> Title </th>
    <th> Year </th>
    <th> Director </th>
    <th> Character Name </th>
    <th> </th>
  </tr>

  <% @characters_played = Character.where({ :actor_id => @actor_id}) %>
  <% @characters_played.each do |a_character| %>
    <tr>> 
      <th> <%= Movie.where({ :id => a_character.movie_id}).at(0).title %> </th>
      <th> <%= Movie.where({ :id => a_character.movie_id}).at(0).year %> </th>
      <th>   
        <% @movie_director = Movie.where({ :id => a_character.movie_id}).at(0).director_id %>
        <%= Director.where({ :id => @movie_director }).at(0).name %>
      </th>
      <th> <%= a_character.name %> </th>
      <th> 
        <% @movie_id = Movie.where({ :id => a_character.movie_id}).at(0).id %>
        <a href = "/movies/<%= @movie_id %>"> Show details </a> 
        </th>
    </tr>
  <% end %>
</table>
