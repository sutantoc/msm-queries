<h1> Director #<%= Director.where({:id => @director_id }).at(0).id %> details </h1>

<a href="/directors"> Go back </a>

<hr>

<dl>
  <dt>Name</dt>
  <dd> <%= Director.where({:id => @director_id }).at(0).name %> </dd>

  <dt>Dob</dt>
  <dd> <%= Director.where({:id => @director_id }).at(0).dob %> </dd>

  <dt>Bio</dt>
  <dd> <%= Director.where({:id => @director_id }).at(0).bio %> </dd>

  <dt>Image</dt>
  <dd> <img src="<%= Director.where({:id => @director_id }).at(0).image %>" style ="width:250px;"> </dd>

  <dt>Created at</dt>
  <dd> <%= Director.where({:id => @director_id }).at(0).created_at %> </dd>

  <dt>Updated at</dt>
  <dd> <%= Director.where({:id => @director_id }).at(0).updated_at %> </dd>
</dl>

<hr>

<h2> Filmography </h2>

<table border ="1">
  <tr>
    <th> ID </th>
    <th> Image </th>
    <th> Title </th>
    <th> Year </th>
    <th> Director </th>
    <th> </th>
  </tr>

  <% Movie.where({ :director_id => @director_id }).each do |a_movie| %>
    <tr>> 
      <th> <%= a_movie.id %> </th>
      <th> <img src ="<%= a_movie.image %>" style="width: 250px"> </th>
      <th> <%= a_movie.title %> </th>
      <th> <%= a_movie.year %> </th>
      <th> <%= Director.where({:id => @director_id }).at(0).name %> </th>
      <th> <a href = "/movies/<%= a_movie.id %>"> Show details </a> </th>
    </tr>
  <% end %>
</table>
